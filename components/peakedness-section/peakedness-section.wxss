/* components/peakedness-section/peakedness-section.wxss */
@import "/assets/style/common.wxss";
.container {
  display: flex;
  justify-content: space-between;
  padding-left: 20rpx;
  overflow: hidden;
  margin:20rpx 0;
  border-radius: 16rpx;
  background-color: #f2f2f2;
}

.list {
  margin-top: 20rpx;
}
.list .title {
  font-size: 28rpx;
  margin: 0 0 10rpx;
}
.list .item {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
  font-size: 24rpx;
}
.list .name {
  color: #999;
}
.cover {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}
.cover .img {
  width: 100%;
  height: 100%;
}
