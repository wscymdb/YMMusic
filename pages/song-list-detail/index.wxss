/* pages/song-list-detail/index.wxss */
.song-list-detail {
  padding: 0 20rpx;
}
.song-list-detail .title {
  font-size: 40rpx;
  font-weight: 700;
  margin: 20rpx 0 30rpx;
}
.song-list-detail  .list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.song-list-detail  .item {
  margin-bottom: 10px;
  flex-shrink: 0;
  width: 48%;
  margin-right: 20rpx;
}
.song-list-detail  .list .item:nth-child(2n) {
  margin-right: 0;
}
.song-list-detail  .loding {
  text-align: center;
}
.song-list-detail  .top {
  position: fixed;
  right: 66rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
}
.song-list-detail  .top .img {
  width: 100%;
  height: 100%;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.block {
  width: 120rpx;
  height: 120rpx;
}
.block .img {
  width: 100%;
  height: 100%;
}