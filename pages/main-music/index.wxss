/* pages/main-music/index.wxss */
@import "../../assets/iconfont/iconfont.wxss";
page {
  --search-background-color: #fff;
  --search-padding: 10px 0;
}
.main-music {
  padding: 0 20rpx;
}
.main-music .title {
  font-size: 30rpx;
  font-weight: 700;
}
.main-music .banner {
  border-radius: 16rpx;
  overflow: hidden;
}
.main-music .banner .banner-img {
  width: 100%;
  /* height: 100%; */
}
.main-music .recommend {
  margin: 40rpx 0;
}
.main-music .recommend .iconfont {
  font-size: 24rpx;
}

.main-music .recommend .recommend-list {
  margin-top: 30rpx;
}

.main-music .recommend .recommend-list .van-skeleton--animate {
  margin-bottom: 20rpx;
}
.play-bar-placeholder {
  height: 46px;
}
.main-music .player-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 45px;
  padding: 0rpx 17rpx;
  background-color: #fff;
}
.main-music .player-bar .cover {
  display: flex;
  align-items: center;
}
.main-music .player-bar  .img {
  height: 45px;
  width: 45px;
  border-radius: 50%;
  margin-right: 10rpx;
}
.main-music .player-bar .controls {
  display: flex;
  align-items: center;
}
.main-music .player-bar .controls .cimg {
  width: 30px;
  height: 30px;
  border-radius: 50%;
}
.main-music .player-bar .controls .clist {
  width: 40px;
  height: 40px;
}

.main-music .player-bar .cover .album-animation {
  animation: albumRotate 6s linear infinite;
}

@keyframes albumRotate {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}